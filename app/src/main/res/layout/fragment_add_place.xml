<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.AddPlaceFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
                <ImageView
                    android:contentDescription="@string/image_content_des"
                    android:visibility="visible"
                    android:id="@+id/selectImage"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/density_200"
                    android:layout_marginStart="@dimen/density_5"
                    android:layout_marginTop="@dimen/density_5"
                    android:layout_marginEnd="@dimen/density_5"
                    android:layout_marginBottom="@dimen/density_5"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="@dimen/density_3"
                    android:scaleType="fitCenter"
                    android:src="@drawable/default_image" />
            <LinearLayout
                android:id="@+id/multipleImageViewId"
                android:layout_width="match_parent"
                android:layout_height="@dimen/density_200"
                android:orientation="horizontal"
                android:weightSum="2"
                android:visibility="gone"
                android:layout_margin="@dimen/density_10"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    >
                    <ImageView
                        android:contentDescription="@string/image_content_des"
                        android:layout_marginTop="@dimen/density_5"
                        android:layout_marginLeft="@dimen/density_5"
                        android:layout_marginBottom="@dimen/density_5"
                        android:layout_marginRight="@dimen/density_5"
                        android:id="@+id/showPicId1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/density_100"
                        android:scaleType="fitXY"
                        />
                    <ImageView
                        android:contentDescription="@string/image_content_des"
                        android:layout_marginLeft="@dimen/density_5"
                        android:layout_marginRight="@dimen/density_5"
                        android:layout_marginBottom="@dimen/density_5"
                        android:id="@+id/showPicId3"
                        android:scaleType="fitXY"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/density_100"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    >
                    <ImageView
                        android:contentDescription="@string/image_content_des"
                      android:layout_marginEnd="@dimen/density_5"
                        android:layout_marginTop="@dimen/density_5"
                        android:layout_marginBottom="@dimen/density_5"
                        android:id="@+id/showPicId2"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/density_100"
                        android:scaleType="fitXY"
                        />
                    <ImageView
                        android:contentDescription="@string/image_content_des"
                        android:layout_marginEnd="@dimen/density_5"
                        android:layout_marginBottom="@dimen/density_5"
                        android:id="@+id/showPicId4"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/density_100"
                        android:scaleType="fitXY"
                        />
                </LinearLayout>
            </LinearLayout>
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="@dimen/density_110"
                    android:layout_height="@dimen/density_30"
                    android:text="@string/upload_image"
                    android:textAllCaps="false"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/density_10"
                    android:layout_marginBottom="@dimen/density_20"
                    android:background="@color/mainColor"
                    android:textColor="@color/white"
                    android:id="@+id/uploadImageId"
                    android:gravity="center"
                    />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/density_10"
                android:layout_marginRight="@dimen/density_10"
                android:layout_marginBottom="@dimen/density_10"
                android:padding="@dimen/density_10"
                android:textColor="@color/black"
                android:id="@+id/locationId"
                android:visibility="gone"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/progressId"
                android:layout_marginTop="@dimen/density_10"
                android:layout_marginRight="@dimen/density_10"
                android:layout_marginLeft="@dimen/density_10"
                android:layout_marginBottom="@dimen/density_10"
                >
                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    />
                <TextView
                    android:padding="@dimen/density_5"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_12"
                    android:text="@string/pleasewait"
                    android:layout_gravity="center_horizontal"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/density_10"
                android:layout_marginRight="@dimen/density_10"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Rate_this"
                    android:textColor="@color/black"
                    android:textAllCaps="false"
                    android:padding="@dimen/density_5"
                    android:layout_gravity="center_vertical"
                    />
                <androidx.appcompat.widget.AppCompatRatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:scaleY="0.7"
                    android:scaleX="0.7"
                    android:numStars="5"
                    android:clickable="true"
                    android:focusable="true"
                    android:id="@+id/ratingId"
                    android:rating="3" />
            </LinearLayout>
          <com.google.android.material.card.MaterialCardView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/density_10"
              android:layout_marginRight="@dimen/density_10"
              android:layout_marginTop="@dimen/density_10"
              android:layout_marginBottom="@dimen/density_10"
              app:cardCornerRadius="@dimen/density_5"
              app:cardElevation="@dimen/density_4"
              >
              <EditText
                  android:id="@+id/descriptionId"
                  android:padding="@dimen/density_5"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:hint="@string/des_text"
                  android:gravity="top|start"
                  android:inputType="textMultiLine"
                  android:minLines="4"
                  android:scrollHorizontally="false"
                  android:scrollbars="vertical"
                  android:background="@null"
                  />
          </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/density_10"
                android:layout_marginRight="@dimen/density_10"
                android:layout_marginTop="@dimen/density_10"
                android:layout_marginBottom="@dimen/density_10"
                app:cardCornerRadius="@dimen/density_5"
                app:cardElevation="@dimen/density_4"
                >
                <EditText
                    android:id="@+id/commentId"
                    android:fontFamily="sans-serif"
                    android:padding="@dimen/density_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/comment"
                    android:gravity="top|start"
                    android:inputType="textMultiLine"
                    android:minLines="3"
                    android:scrollHorizontally="false"
                    android:scrollbars="vertical"
                    android:background="@null"
                    />
            </com.google.android.material.card.MaterialCardView>


            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="@dimen/density_40"
                android:background="@drawable/round_shape"
                android:text="@string/ok"
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/density_10"
                android:layout_marginRight="@dimen/density_10"
                android:layout_marginTop="@dimen/density_10"
                android:layout_marginBottom="@dimen/density_10"
                android:id="@+id/okId"
                android:visibility="gone"
                android:clickable="true"
                android:focusable="true"
                android:textAllCaps="false"
               />
        </LinearLayout>
    </ScrollView>

</FrameLayout>
</layout>