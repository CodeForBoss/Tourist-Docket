<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp"
        android:layout_margin="5dp"
        android:id="@+id/commentCardId"
        >
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <ImageView
               android:layout_width="70dp"
               android:layout_height="50dp"
               android:scaleType="fitXY"
               android:padding="5dp"
               android:id="@+id/showProfilePicId"
               />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignEnd="@id/showProfilePicId"
               android:layout_centerVertical="true"
               android:textColor="@color/black"
               android:textAllCaps="false"
               android:textSize="14sp"
               android:id="@+id/showUserNameId"
              />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="14sp"
               android:textAllCaps="false"
               android:textColor="@color/black"
               android:padding="5dp"
               android:layout_below="@id/showProfilePicId"
               android:text="Rating"
               android:id="@+id/ratingId3"
               android:layout_marginTop="15dp"
               />

           <androidx.appcompat.widget.AppCompatRatingBar
               android:id="@+id/showRatingId"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:numStars="5"
               android:scaleX="0.6"
               android:scaleY="0.6"
               android:layout_alignStart="@id/ratingId3"
               android:layout_below="@id/showProfilePicId"
               android:layout_marginLeft="40dp"
               />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="@color/black"
               android:textAllCaps="false"
               android:textSize="14sp"
               android:padding="5dp"
               android:id="@+id/showcommentId3"
               />
       </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>