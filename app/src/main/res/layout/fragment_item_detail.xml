<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ItemDetailFragment">

      <LinearLayout
          android:layout_width="match_parent"
          android:orientation="vertical"
          android:layout_height="match_parent">
          <androidx.cardview.widget.CardView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              app:cardElevation="@dimen/density_4"
              app:cardCornerRadius="@dimen/density_10"
              android:layout_margin="@dimen/density_5"
              android:id="@+id/itemcardId2"
              >
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                  >
                  <com.denzcoskun.imageslider.ImageSlider
                      android:id="@+id/image_slider2"
                      android:layout_width="match_parent"
                      android:layout_height="@dimen/density_180"
                      android:layout_margin="@dimen/density_5"
                      app:iss_auto_cycle="true"
                      app:iss_period="10000"
                      app:iss_delay="10000"
                      app:iss_text_align="CENTER"
                      app:iss_title_background="@drawable/gradient"
                      app:iss_error_image="@drawable/error"
                      app:iss_selected_dot="@drawable/default_selected_dot"
                      app:iss_unselected_dot="@drawable/default_unselected_dot"/>
              </LinearLayout>
          </androidx.cardview.widget.CardView>
          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textColor="@color/black"
              android:textAllCaps="false"
              android:layout_marginLeft="@dimen/density_10"
              android:layout_marginBottom="@dimen/density_10"
              android:layout_marginRight="@dimen/density_10"
              android:fontFamily="sans-serif"
              android:id="@+id/locationshowId2"
              android:background="@drawable/border"
              android:padding="@dimen/density_10"
              />
          <ScrollView
              android:layout_width="match_parent"
              android:layout_height="match_parent">
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  >
                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:layout_margin="@dimen/density_10"
                      android:id="@+id/descriptionsLayoutId"
                      android:visibility="visible"
                      >
                      <TextView
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:id="@+id/showDescriptionsId5"
                          android:textAllCaps="false"
                          android:textColor="@color/black"
                          />
                      <TextView
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:textAllCaps="false"
                          android:textColor="@color/black"
                          android:background="@drawable/border2"
                          />
                  </LinearLayout>
                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:id="@+id/reviewsLayoutId"
                      android:visibility="visible"
                      >
                      <androidx.recyclerview.widget.RecyclerView
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:id="@+id/commentRecyclerId"
                          android:layout_margin="@dimen/density_5"
                          />
                  </LinearLayout>
              </LinearLayout>
          </ScrollView>

      </LinearLayout>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/addcomment_text"
        android:textSize="@dimen/sp_12"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:layout_gravity="end|bottom"
        android:layout_marginEnd="@dimen/density_20"
        android:id="@+id/addCommentBtnId"
        android:layout_marginBottom="@dimen/density_50"
        android:layout_marginTop="@dimen/density_10"
        android:layout_marginStart="@dimen/density_10"
        />
</FrameLayout>
</layout>