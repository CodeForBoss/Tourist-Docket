<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ItemDetailFragment">

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent">
      <LinearLayout
          android:layout_width="match_parent"
          android:orientation="vertical"
          android:layout_height="match_parent">
          <androidx.cardview.widget.CardView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              app:cardElevation="4dp"
              app:cardCornerRadius="10dp"
              android:layout_margin="5dp"
              android:id="@+id/itemcardId2"
              >
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                  >
                  <com.denzcoskun.imageslider.ImageSlider
                      android:id="@+id/image_slider2"
                      android:layout_width="wrap_content"
                      android:layout_height="200dp"
                      android:layout_margin="10dp"
                      app:iss_auto_cycle="true"
                      app:iss_period="10000"
                      app:iss_delay="10000"
                      app:iss_text_align="CENTER"
                      app:iss_title_background="@drawable/gradient"
                      app:iss_error_image="@drawable/error"
                      app:iss_selected_dot="@drawable/default_selected_dot"
                      app:iss_unselected_dot="@drawable/default_unselected_dot"/>
              </LinearLayout>
          </androidx.cardview.widget.CardView>
          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textColor="@color/black"
              android:textAllCaps="false"
              android:layout_margin="10dp"
              android:fontFamily="sans-serif"
              android:id="@+id/locationshowId2"
              />
          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textColor="@color/black"
              android:textAllCaps="false"
              android:layout_margin="10dp"
              android:fontFamily="sans-serif"
              android:id="@+id/descriptionShowId2"
              />
          <View
              android:layout_width="match_parent"
              android:layout_height="1dp"
              android:background="#ff914d"
              />
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/black"
              android:textAllCaps="false"
              android:textSize="14sp"
              android:text="Reviews"
              android:layout_margin="5dp"
              android:layout_gravity="center_horizontal"
              />
          <androidx.recyclerview.widget.RecyclerView
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_margin="5dp"
              android:id="@+id/commentRecyclerId"
              />
      </LinearLayout>

  </ScrollView>

</FrameLayout>
</layout>